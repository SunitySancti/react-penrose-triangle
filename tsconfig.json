{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "lib": ["es7", "es6", "dom"],
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}